<%= form_for message, remote: true do |f| %>
  <%= f.text_field :content, class: "message-submit-block form-control", :placeholder => "メッセージを入力して下さい" %>
  <%= f.hidden_field :room_id, :value => @room.id %>
  <%= button_tag type: 'submit', class: "btn btn-danger",id: "message_btn" do %>
    <i class="far fa-paper-plane"></i>
  <% end %>
<% end %>
